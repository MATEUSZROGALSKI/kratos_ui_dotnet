@using Ory.Kratos.Client.Model;

@model KratosVerificationFlow

<div class="h-2/3 w-2/3 rounded glass shadow flex flex-row justify-center align-center">
    <div class="bg bg-verify w-1/2 h-full rounded-l"></div>
    <div class="w-1/2 h-full bg-white p-4 rounded-r flex flex-col justify-between items-center">

        <div class="mb-3">
            <h3 class="font-semibold text-2xl text-gray-800">Verify your account!</h3>
        </div>

        <div class="w-2/3">
            <partial name="_KratosForm" for="@Model.Ui" />
        </div>

        <div class="space-y-2 w-2/3 mb-2 flex justify-center px-5">
            <p class="text-gray-400 text-center">Didn't register yet? <a href="/account/sign-up" class="text-sm text-purple-700 hover:text-purple-700">Sign Up</a></p>
        </div>
            
    </div>
</div>